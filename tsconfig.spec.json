{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/spec",
    "types": [
      "node",
      "googlemaps",
      "jest",
      "@testing-library/jest-dom"
    ],
    "module": "commonjs",
    "esModuleInterop": true, // 2
    "emitDecoratorMetadata": true,
    "allowJs": true
  },
  "files": [
    "setup-jest.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
  ]
}
